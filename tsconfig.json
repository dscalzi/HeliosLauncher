{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "lib": ["ES2022", "dom"],
    "moduleResolution": "node"
  }
}
